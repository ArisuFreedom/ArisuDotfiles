pcm.dmix_output {
    type dmix
    ipc_key 1024
    slave {
        pcm "hw:3,0"
        rate 48000
        channels 2
        period_size 1024
        buffer_size 4096
    }
}

pcm.dsnoop_input {
    type dsnoop
    ipc_key 1025
    slave {
        pcm "hw:3,0"
        rate 48000
        channels 2
    }
}

pcm.duplex {
    type asym
    playback.pcm "dmix_output"
    capture.pcm "dsnoop_input"
}

pcm.plug_duplex {
    type plug
    slave.pcm "duplex"
}

# define padr√£o
pcm.!default pcm.plug_duplex
ctl.!default {
    type hw
    card 3
}

